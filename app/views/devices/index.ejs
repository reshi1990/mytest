<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li class="active"><a href="<%- pathTo.devices() %>">devices</a> <span class="divider">/</span></li>
</ul>

<div class="page-header">
    <h1>Index of device</h1>
</div>

<div class="row">
    <div class="span12">
        <p><%- link_to('<i class="icon-plus icon-white"></i> New device', pathTo.new_device(), {class: 'btn btn-primary'}) %></>
    </div>
</div>

<div class="row">
    <div class="span12">
        <% if (devices.length > 0) { %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% devices.forEach(function (device) { %>
                <tr>
                    <td><strong><%- link_to('device #' + device.id, pathTo.device(device)) %></strong></td>
                    <td>
                        <%- link_to('<i class="icon-edit"></i> Edit', pathTo.edit_device(device), {class: 'btn btn-mini'}) %>
                        <%- link_to('<i class="icon-remove icon-white"></i> Delete', pathTo.device(device), {class: 'btn btn-mini btn-danger', method: 'delete', remote: true, jsonp: '(function (u) {location.href = u;})'}) %>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <p class="alert alert-block alert-info">
            <strong>No devices were found.</strong>
        </p>
        <% } %>
    </div>
</div>
